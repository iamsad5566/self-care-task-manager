<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".HomePage">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:background="#EFD37F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/cardView" android:layout_marginTop="20dp">

        <TextView
                android:layout_width="0dp"
                android:layout_height="128dp"

                android:text="書山有路勤為徑，學海無涯苦作舟。"
                android:textSize="32sp"
                android:id="@+id/editTextTextPersonName2"
                tools:ignore="HardcodedText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:layout_marginTop="-100dp"
                app:layout_constraintVertical_bias="0.702"/>
        <TextView
                android:text="韓愈"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="-50dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" tools:ignore="HardcodedText"
                android:textColor="#6D4C41"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageButton
            android:background="@drawable/arrow_right"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/toNextCard"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.947"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="@+id/cardView"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" tools:ignore="SpeakableTextPresentCheck"/>
    <ImageButton
            android:background="@drawable/arrow_left"
            android:layout_width="60dp"
            android:layout_height="60dp" android:id="@+id/toLastCard"
            style="@style/Widget.AppCompat.ImageButton"
            tools:ignore="ContentDescription,MissingConstraints,SpeakableTextPresentCheck"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" app:layout_constraintEnd_toStartOf="@+id/toNextCard"
            android:layout_marginEnd="1dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp" app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/testText"
            app:layout_constraintStart_toEndOf="@+id/toLastCard" android:layout_marginStart="1dp"
            app:layout_constraintEnd_toStartOf="@+id/toNextCard" android:layout_marginEnd="1dp"
            tools:ignore="HardcodedText,MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"
            app:layout_constraintHorizontal_bias="0.82" app:layout_constraintVertical_bias="0.045"/>
    <ImageButton
            android:background="@drawable/card"
            android:layout_width="56dp"
            android:layout_height="61dp" android:id="@+id/toCassatte"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="1dp" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.362"
            app:layout_constraintVertical_bias="0.0" tools:ignore="SpeakableTextPresentCheck"/>
</androidx.constraintlayout.widget.ConstraintLayout>